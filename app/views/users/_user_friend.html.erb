<div class="card mt-3 p-2">
  <h5> <span class="user-profile-icons"><%= image_tag 'user-friends.png' %></span>  Friends  </h5>
  <% if has_friends?(user) %>
    <% friends_for(user).each do |f| %>
      <span class= "badge badge-info">
        <%= link_to f.fullname, f %>
      </span>
    <% end %>
  <% else %>
    <p> No friends yet </p>
  <% end %>
</div>

<div class="card mt-1 p-2">
  <% if has_mutual_friends_with?(user) %>
    <% mutual_friends_with(user).each do |f| %>
      <span class= "badge badge-info">
        <%= link_to f.fullname, f %>
      </span>
    <% end %>
  <% else %>
    <p> No mutual friends </p>
  <% end %>
</div>