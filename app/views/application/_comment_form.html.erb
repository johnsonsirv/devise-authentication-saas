<%= form_for Comment.new do |f| %>
	<div class="mt-1">
		<div class="py-1 d-flex flex-row">
				<div class="comments-gravatar mr-2 rounded-circle"> <%= image_tag 'gravatar.png' %> </div>
				<div class="comment-body p-0">
						<%= f.hidden_field :post_id, value: post.id %>
						<%= f.text_area :content, class: "p-2", placeholder: 'Write a comment' %>
				</div>
		</div>
	</div>
	<div class="float-right"> 
			<span> <%= f.submit 'Comment', class: "btn btn-sm btn-comment mr-2" %> </span>
	</div>
<% end %>